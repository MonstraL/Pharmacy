<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="433dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:visibility="visible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/element_ch" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="163dp">

                <ImageView
                    android:id="@+id/emblemImageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/pharmacy_icon1" />

                <Button
                    android:id="@+id/closeCardButton"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:drawable/presence_offline" />
            </RelativeLayout>

            <TextView
                android:id="@+id/chainNameTextView"
                android:layout_width="342dp"
                android:layout_height="51dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:textAlignment="center"
                android:textColor="#043b0a"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/chainAddressTextView"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="45dp"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:textColor="#2f2f2f"
                android:textSize="20sp"
                android:textStyle="italic"
                android:typeface="serif" />

            <TextView
                android:id="@+id/workTimeTextView"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="80dp"
                android:layout_marginTop="12dp"
                android:textAlignment="center"
                android:textColor="@color/cardview_dark_background"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/foundationTextView"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="115dp"
                android:layout_marginTop="12dp"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/workersTextView"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="115dp"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:textColor="@color/cardview_dark_background"
                android:textSize="20sp" />

            <Button
                android:id="@+id/locationButton"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="7dp"
                android:layout_marginTop="15dp"
                android:background="@android:drawable/ic_menu_mylocation" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>