<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/element_p">

    <TextView
        android:id="@+id/pharmacy_nameText"
        android:layout_width="259dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="13dp"
        android:textAlignment="center"
        android:textColor="#043b0a"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pharmacy_addressText"
        android:layout_width="252dp"
        android:layout_height="39dp"
        android:layout_alignEnd="@+id/pharmacy_nameText"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="90dp"
        android:textAlignment="center"
        android:textColor="#2f2f2f"
        android:textSize="20sp"
        android:textStyle="italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/pharmacy_stageText"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pharmacy_nameText"
        android:layout_alignParentTop="true"
        android:layout_marginTop="57dp"
        android:text="@string/openStage"
        android:textAlignment="center"
        android:textColor="#147008"
        android:textSize="20sp"
        android:textStyle="italic" />

    <ImageButton
        android:id="@+id/pharmacy_infoButton"
        android:layout_width="123dp"
        android:layout_height="116dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/pharmacy_nameText"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="-7dp"
        android:background="@android:color/transparent"
        android:cropToPadding="true"
        app:srcCompat="@drawable/pharmacy_icon1" />

    <EditText
        android:id="@+id/pharmacy_priceText"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="19dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#01350c"
        android:textStyle="bold|italic" />
</RelativeLayout>