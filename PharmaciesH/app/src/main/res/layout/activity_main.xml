<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_icon"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/favButton1"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/deleteFavButton1"
        android:layout_alignStart="@+id/favButton"
        android:background="@android:color/transparent"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/favButton3"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/deleteFavButton3"
        android:layout_alignStart="@+id/favButton1"
        android:background="@android:color/transparent"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/favButton2"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/deleteFavButton2"
        android:layout_alignStart="@+id/favButton1"
        android:background="@android:color/transparent"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="italic" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:visibility="visible"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textToSearch"
        android:layout_marginEnd="27dp"
        android:background="@android:drawable/ic_menu_send"
        android:visibility="visible" />

    <EditText
        android:id="@+id/textToSearch"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="90dp"
        android:ems="10"
        android:inputType="text|textPersonName"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold|italic"
        android:visibility="visible"
        tools:text="Введіть назву" />

    <Button
        android:id="@+id/deleteFavButton1"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/deleteFavButton3"
        android:background="@android:color/transparent"
        android:layout_marginBottom="264dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/deleteFavButton3"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:layout_marginBottom="90dp"
        android:layout_marginEnd="69dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/deleteFavButton2"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/deleteFavButton1"
        android:background="@android:color/transparent"
        android:layout_marginBottom="176dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/searchFavButton1"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/deleteFavButton1"
        android:background="@android:color/transparent"
        android:visibility="visible" />

    <Button
        android:id="@+id/searchFavButton2"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/deleteFavButton2"
        android:background="@android:color/transparent"
        android:visibility="visible" />

    <Button
        android:id="@+id/searchFavButton3"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/deleteFavButton3"
        android:background="@android:color/transparent"
        android:visibility="visible" />

    <Button
        android:id="@+id/searchFavButton"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/deleteFavButton"
        android:background="@android:color/transparent"
        android:visibility="visible" />

    <Button
        android:id="@+id/deleteFavButton"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/deleteFavButton1"
        android:background="@android:color/transparent"
        android:layout_marginTop="249dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/favButton"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/searchFavButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:background="@android:color/transparent"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="italic" />


</RelativeLayout>