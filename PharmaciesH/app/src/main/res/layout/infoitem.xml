<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="340dp"
    android:background="@drawable/element_m5"
    android:orientation="horizontal"
    android:padding="5dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/nameText"
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="145dp"
        android:textAlignment="center"
        android:textColor="#6b6a6a"
        android:textSize="37sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/formText"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/searchSubstanceButton"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/instructionButton"
        android:layout_width="252dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="11dp"
        android:cropToPadding="false"
        app:srcCompat="@drawable/medications_icon" />

    <Button
        android:id="@+id/searchPharmaciesButton"
        android:layout_width="143dp"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/instructionButton"
        android:background="@android:color/transparent"
        android:visibility="visible" />

    <Button
        android:id="@+id/searchSubstanceButton"
        android:layout_width="189dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nameText"
        android:background="@android:color/transparent"
        android:visibility="visible" />

</RelativeLayout>